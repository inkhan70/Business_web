
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to check if the uploaded file is an image and below a certain size.
    function isImageBelowMaxSize(maxSizeMB) {
      return request.resource.size < maxSizeMB * 1024 * 1024
          && request.resource.contentType.matches('image/.*');
    }

    // Allow authenticated users to upload and read their own product files.
    // The path matches the structure: products/{userId}/{productId}/{varietyId}
    match /products/{userId}/{productId}/{varietyId} {
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && isImageBelowMaxSize(5); // Allow up to 5MB

      // Allow anyone to read product images, as they are public-facing.
      allow read: if true;
    }
    
    // Rule for user-specific files like storefront wallpapers.
    match /products/{userId}/storefront-wallpaper.jpg {
        allow write: if request.auth != null && request.auth.uid == userId && isImageBelowMaxSize(5);
        allow read: if true;
    }
    
    // Rule for the shared media library uploaded by admins.
    match /library/{category}/{imageId} {
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      allow read: if true;
    }
  }
}
