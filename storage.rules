rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Match any file path under the 'images' folder
    match /images/{userId}/{allPaths=**} {
      // Allow read access to anyone (e.g., for viewing product images)
      allow read;

      // Allow write access (create, update, delete) only if:
      // 1. The user is authenticated.
      // 2. The `userId` in the path matches the authenticated user's ID.
      // 3. The uploaded file is an image.
      // 4. The image size is less than 5MB.
      allow write: if request.auth != null 
                    && request.auth.uid == userId
                    && request.resource.contentType.matches('image/.*')
                    && request.resource.size < 5 * 1024 * 1024;
    }
  }
}
