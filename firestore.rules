/**
 * @fileoverview Firestore Security Rules for the application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for user profiles,
 * and allows public read access to products and orders while restricting
 * write access to authorized users based on ownership.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profiles, with the document ID matching the Firebase Auth UID.
 * - /products/{productId}: Stores product information, with each document containing a 'userId'
 *   field indicating the owner.
 * - /orders/{orderId}: Stores order information, with each document containing a 'buyerId' and 'businessId'
 *   field indicating the buyer and seller respectively.
 *
 * Key Security Decisions:
 * - Users can only read and write their own profile data.
 * - Products and orders are publicly readable but can only be created, updated, or deleted by
 *   their respective owners (based on the 'userId', 'buyerId', and 'businessId' fields).
 * - No user listing is allowed.
 *
 * Denormalization for Authorization:
 * The rules rely on the `userId` field within the `/products/{productId}` documents, and the `buyerId` and `businessId` in the `/orders/{orderId}` documents to enforce ownership.
 * This avoids costly `get()` operations to other collections for authorization.
 *
 * Structural Segregation:
 * The application uses a single `/users/{userId}` collection to store both business and buyer profiles. Access is controlled through the `uid` field.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Enforces that users can only read and write their own profile data.
     * @path /users/{userId}
     * @allow (get, create, update, delete) - User with UID 'm7wK4SLXdGc5RoIxZROCpwL9DQG2' can access /users/m7wK4SLXdGc5RoIxZROCpwL9DQG2
     * @deny (get, create, update, delete) - User with UID 'otherUser' cannot access /users/m7wK4SLXdGc5RoIxZROCpwL9DQG2
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.uid == userId;
      allow update: if isSignedIn() && isExistingOwner(userId) && request.resource.data.uid == resource.data.uid;
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Allows public read access to product information while restricting write access to the owner.
     * @path /products/{productId}
     * @allow (get, list) - Any user can read product information.
     * @allow (create) - User with UID 'user123' can create a product with userId: 'user123'.
     * @allow (update, delete) - User with UID 'user123' can update/delete a product with userId: 'user123'.
     * @deny (create, update, delete) - User with UID 'otherUser' cannot create/update/delete a product with userId: 'user123'.
     * @principle Enforces owner-only writes with public read access.
     */
    match /products/{productId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isSignedIn() && isExistingProductOwner(resource.data.userId);
      allow delete: if isSignedIn() && isExistingProductOwner(resource.data.userId);
    }

    /**
     * @description Allows public read access to order information while restricting write access to the buyer or business.
     * @path /orders/{orderId}
     * @allow (get, list) - Any user can read order information.
     * @allow (create) - User with UID 'buyer123' can create an order with buyerId: 'buyer123'.
     * @allow (update, delete) - User with UID 'buyer123' can update/delete an order with buyerId: 'buyer123'.
     * @deny (create, update, delete) - User with UID 'otherUser' cannot create/update/delete an order with buyerId: 'buyer123'.
     * @principle Enforces owner-only writes with public read access.
     */
    match /orders/{orderId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.buyerId == request.auth.uid;
      allow update: if isSignedIn() && (isExistingOrderOwner(resource.data.buyerId) || isExistingOrderBusiness(resource.data.businessId));
      allow delete: if isSignedIn() && (isExistingOrderOwner(resource.data.buyerId) || isExistingOrderBusiness(resource.data.businessId));
    }
  }

  // Helper functions
  function isSignedIn() {
    return request.auth != null;
  }

  function isOwner(userId) {
    return request.auth.uid == userId;
  }

  function isExistingOwner(userId) {
    return isSignedIn() && isOwner(userId) && resource != null;
  }

  function isProductOwner(userId) {
    return request.auth.uid == userId;
  }

  function isExistingProductOwner(userId) {
    return isSignedIn() && isProductOwner(userId) && resource != null;
  }

  function isOrderOwner(userId) {
    return request.auth.uid == userId;
  }

  function isExistingOrderOwner(userId) {
    return isSignedIn() && isOrderOwner(userId) && resource != null;
  }

    function isBusiness(businessId) {
    return request.auth.uid == businessId;
  }

  function isExistingOrderBusiness(businessId) {
    return isSignedIn() && isBusiness(businessId) && resource != null;
  }
}