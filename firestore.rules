/**
 * @fileoverview Firestore Security Rules for the application.
 *
 * Core Philosophy:
 * This ruleset enforces a user-ownership model for user profiles, allowing users to read and write their own profile data.
 * Products are publicly readable but only writable by their owners. Orders are accessible to associated buyers and businesses.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profile data.
 * - /products/{productId}: Stores product data.
 * - /orders/{orderId}: Stores order data.
 *
 * Key Security Decisions:
 * - Users can only read and write their own user profile.
 * - Products are publicly readable but only writable by their owners.
 * - Orders are only accessible to the buyer and business involved.
 *
 * Denormalization for Authorization:
 * The 'Product' entity includes a 'userId' field to directly link it to the owner.
 * The 'Order' entity includes both 'buyerId' and 'businessId' for authorization.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Manages user profile access. Users can read and write their own profile data.
     * @path /users/{userId}
     * @allow (create) - User with UID 'user_abc' can create their profile if request.auth.uid == 'user_abc' and the id field also matches.
     * @allow (get, list, update, delete) - User with UID 'user_abc' can read, update, and delete their profile.
     * @deny (create) - User with UID 'user_def' cannot create a profile for user 'user_abc'.
     * @principle Enforces document ownership for writes and restricts access to a user's own data tree.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && exists(/databases/$(database)/documents/users/$(userId));
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.uid == userId;
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Manages product access. Products are publicly readable, but only the owner can create, update, or delete.
     * @path /products/{productId}
     * @allow (get, list) - Any user can read any product.
     * @allow (create) - User with UID 'user_abc' can create a product if request.auth.uid matches the 'userId' field in the data.
     * @allow (update, delete) - User with UID 'user_abc' can update/delete a product they own (resource.data.userId == 'user_abc').
     * @deny (create) - User with UID 'user_def' cannot create a product and set 'userId' to 'user_abc'.
     * @principle Enforces document ownership for writes, public read access.
     */
    match /products/{productId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

        function isProductOwner(productOwnerId) {
          return isSignedIn() && request.auth.uid == productOwnerId;
        }

      function isExistingProductOwner(productOwnerId) {
        return isProductOwner(productOwnerId) && exists(/databases/$(database)/documents/products/$(productId));
      }

      allow get: if true;
      allow list: if true;
      allow create: if isSignedIn() && isProductOwner(request.resource.data.userId);
      allow update: if isSignedIn() && isProductOwner(resource.data.userId);
      allow delete: if isSignedIn() && isProductOwner(resource.data.userId);
    }

    /**
     * @description Manages order access.  Only the buyer or the business involved in the order can access it.
     * @path /orders/{orderId}
     * @allow (get, list) - Buyer or business with UID 'user_abc' can read an order where buyerId or businessId is 'user_abc'.
     * @allow (create) - Any authenticated user can create an order.
     * @allow (update, delete) - Buyer or business with UID 'user_abc' can update or delete if the order has buyerId or businessId 'user_abc'.
     * @deny (create) - Unauthenticated users cannot create an order.
     *
     * @principle Enforces shared access based on buyerId or businessId fields.
     */
    match /orders/{orderId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isBuyerOrBusiness(buyerId, businessId) {
        return isSignedIn() && (request.auth.uid == buyerId || request.auth.uid == businessId);
      }

      function isExistingBuyerOrBusiness(buyerId, businessId) {
        return isSignedIn() && (request.auth.uid == resource.data.buyerId || request.auth.uid == resource.data.businessId) && exists(/databases/$(database)/documents/orders/$(orderId));
      }

      allow get: if isSignedIn() && (request.auth.uid == resource.data.buyerId || request.auth.uid == resource.data.businessId);
      allow list: if false;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (request.auth.uid == resource.data.buyerId || request.auth.uid == resource.data.businessId);
      allow delete: if isSignedIn() && (request.auth.uid == resource.data.buyerId || request.auth.uid == resource.data.businessId);
    }
  }
}