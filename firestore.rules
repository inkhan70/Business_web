
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isUserInRole(role) {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }
    
    function isAdmin() {
        return exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
               get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(uid) {
        return request.auth.uid == uid;
      }

      function isExistingOwner(uid) {
        return isOwner(uid) && exists(/databases/$(database)/documents/users/$(uid));
      }

      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      // Allow create only if the user is creating their own document.
      // This rule is checked during the transaction in the signup form.
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isExistingOwner(userId) || isAdmin();
      allow delete: if isExistingOwner(userId) || isAdmin();
    }
    
    // Secure the config collection, specifically the user_count document
    match /config/user_count {
      // The first user can create this document, but only if they are setting the count to 1
      allow create: if request.auth != null && request.resource.data.count == 1;

      // Any subsequent authenticated user can increment the count, but only by exactly 1
      allow update: if request.auth != null && request.resource.data.count == resource.data.count + 1;
      
      // Allow any authenticated user to read the document
      allow get: if request.auth != null;
      
      // No one can list or delete the document directly
      allow list, delete: if false;
    }

    match /products/{productId} {
       function isSignedIn() {
        return request.auth != null;
      }

      function isProductOwner(productOwnerId) {
        return isSignedIn() && request.auth.uid == productOwnerId;
      }

      allow get, list: if true;
      allow create: if isProductOwner(request.resource.data.userId);
      allow update, delete: if isProductOwner(resource.data.userId);

      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if isSignedIn();
      }
    }

    match /orders/{orderId} {
      function isSignedIn() {
        return request.auth != null;
      }
      
      function isPartyToOrder(order) {
          return request.auth.uid == order.buyerId || request.auth.uid == order.businessId;
      }

      allow get: if isSignedIn() && isPartyToOrder(resource.data);
      allow list: if isAdmin();
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.buyerId;
      allow update: if isSignedIn() && isPartyToOrder(resource.data);
      allow delete: if false;
    }
    
    match /chats/{chatId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isChatParticipant() {
        return isSignedIn() && request.auth.uid in resource.data.participants;
      }

      allow get, update: if isChatParticipant();
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.participants;
      
      match /messages/{messageId} {
        allow read, create: if isChatParticipant();
      }
    }
  }
}
