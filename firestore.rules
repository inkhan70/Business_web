
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to make rules more readable
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // -- User Profiles --
    // Controls access to user and business accounts
    match /users/{userId} {
      // ANYONE can read user/business profiles for browsing.
      allow read: if true;

      // Users can ONLY create their own profile document.
      allow create: if isOwner(userId);

      // Users can ONLY update or delete their own profile. Admins can also manage users.
      allow update, delete: if isOwner(userId) || isAdmin();
    }
    
    // -- App Configuration --
    // For general app settings like categories.
    match /app_config/{docId} {
        // ANYONE can read app configuration (like the list of categories).
        allow read: if true;
        
        // ONLY admins can change the app configuration.
        allow write: if isAdmin();
    }

    // -- Products --
    // Controls access to product listings.
    match /products/{productId} {
      // ANYONE can read product information.
      allow read: if true;

      // Users can create products if the product's 'userId' matches their own.
      allow create: if isOwner(request.resource.data.userId);

      // Only the product owner or an admin can update or delete it.
      allow update, delete: if isOwner(resource.data.userId) || isAdmin();

      // -- Product Reviews --
      // Sub-collection for reviews on a product.
      match /reviews/{reviewId} {
        // ANYONE can read reviews.
        allow read: if true;

        // Any signed-in user can CREATE a review.
        allow create: if isSignedIn();

        // Reviews cannot be updated or deleted by users to maintain integrity.
        allow update, delete: if isAdmin();
      }
    }

    // -- Orders --
    // Secures customer order information.
    match /orders/{orderId} {
        // Only the buyer, the business, or an admin can read an order.
      allow read: if isSignedIn() && (isOwner(resource.data.buyerId) || isOwner(resource.data.businessId) || isAdmin());

        // Buyers can create their own orders.
      allow create: if isOwner(request.resource.data.buyerId);
      
      // The buyer or business can update the order status.
      allow update: if isSignedIn() && (isOwner(resource.data.buyerId) || isOwner(resource.data.businessId));
      
      // Orders cannot be deleted by users.
      allow delete: if isAdmin();
    }

    // -- Chat --
    // Secures direct messages between users.
    match /chats/{chatId} {
        function isChatParticipant() {
            return isSignedIn() && request.auth.uid in resource.data.participants;
        }
        
        // Only participants can get or update a chat document.
        allow get, update: if isChatParticipant();
        
        // A user can only create a chat if they are one of the participants.
        allow create: if isSignedIn() && request.auth.uid in request.resource.data.participants;
      
      // -- Chat Messages --
      match /messages/{messageId} {
          // Only chat participants can read or create messages.
        allow read, create: if isChatParticipant();
      }
    }
  }
}
